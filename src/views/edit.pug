extends base.pug

block content   
    h4 비디오 수정/추가
    form(method="POST")
        input(name="title", placeholder="동영상 제목", value=video.title, required)
        input(name="description", placeholder="설명", required, type="text", minlength=20, value=video.description)
        input(name="hashtags", placeholder="해시태그 ','로 구분해주세요", required, type="text", value=video.hashtags.join())
        input(value="Save" ,type="submit")